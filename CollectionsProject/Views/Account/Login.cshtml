@model LoginViewModel
<div class="container center-container col-md-12">
    <div class="form-container col-md-6">
        <p class="text-center info-account">@Loc["Sign_In"]</p>
        <form role="form" method="POST" asp-action="Login">
            <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group form-elements">
                <label class="control-label labels-account" asp-for="Email">@Loc["Email"]</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="@Loc["Email Placeholder"]" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-elements">
                <label class="control-label labels-account" asp-for="Password">@Loc["Password"]</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="@Loc["Password Placeholder"]" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-elements">
                <label asp-for="RememberMe">@Loc["Remember"]</label><br />
                <input asp-for="RememberMe" />
            </div>
            <div class="btn-group-justified form-elements">
                <input class="btn btn-success btn-app" type="button" value="@Loc["Register"]" onclick="location.href='@Url.Action("Register", "Account")'" />
                <input type="submit" class="btn btn-primary btn-app" id="submit-btn" value="@Loc["Log In"]" />
            </div>
        </form>
    </div>
</div>
